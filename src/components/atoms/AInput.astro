---
import type { FormField } from '../../lib/form.ts'

export type Props = FormField & astroHTML.JSX.InputHTMLAttributes & {
  type: astroHTML.JSX.HTMLInputTypeAttribute
}

const {
  ...inputProps
} = Astro.props
---

<input
  class="AInput"
  {...inputProps}
/>

<style>
  .AInput {
    display: block;
    width: 100%;
    border: 1px solid var(--color-white);
    box-sizing: border-box;
  }
</style>